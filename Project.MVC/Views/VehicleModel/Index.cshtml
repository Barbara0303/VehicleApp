@model IEnumerable<Project.MVC.Models.ViewModels.VehicleModelViewModel>
@{
    ViewData["Title"] = "Vehicle Models";
    var nextPage = Convert.ToInt32(@ViewBag.PageNumber + 1);
    var previousPage = Convert.ToInt32(@ViewBag.PageNumber - 1);
}

<div class="container mt-5">
    <h1>List of Vehicle Models</h1>
</div>

<div class="container">
    <form method="get" asp-action="Index">
        <div class="container mt-5">
            <div class="row">
                <div class="col col-md-6 d-flex p-0"> 
                    <input type="text" class="form-control border-bottom border-0 shadow-none" name="searchQuery" value="@ViewBag.SearchQuery"
                    placeholder="Search by Name, Abbreviation or Make" />
                    <input type="hidden" name="makeFilter" value="@ViewBag.MakeFilter" />
                    <button type="submit" class="btn btn-primary ms-3">Search</button>
                </div>
            </div>
        </div>
    </form>
</div>

<div class="container mt-5">
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>#</th>
                <th>Name
                    <span>
                        <span>
                            <a class="btn btn-light" asp-action="Index" asp-route-sortBy="Name" asp-route-sortDirection="Asc" asp-route-searchQuery="@ViewBag.SearchQuery" asp-route-makeFilter="@ViewBag.MakeFilter">
                                <i class="bi bi-arrow-up"></i>
                            </a>
                        </span>
                        <span>
                            <a class="btn btn-light" asp-action="Index" asp-route-sortBy="Name" asp-route-sortDirection="Desc" asp-route-searchQuery="@ViewBag.SearchQuery" asp-route-makeFilter="@ViewBag.MakeFilter">
                                <i class="bi bi-arrow-down"></i>
                            </a>
                        </span>
                    </span>
                </th>
                <th>Abbreviation
                    <span>
                        <span>
                            <a class="btn btn-light" asp-action="Index" asp-route-sortBy="Abrv" asp-route-sortDirection="Asc" asp-route-searchQuery="@ViewBag.SearchQuery" asp-route-makeFilter="@ViewBag.MakeFilter">
                                <i class="bi bi-arrow-up"></i>
                            </a>
                        </span>
                        <span>
                            <a class="btn btn-light" asp-action="Index" asp-route-sortBy="Abrv" asp-route-sortDirection="Desc" asp-route-searchQuery="@ViewBag.SearchQuery" asp-route-makeFilter="@ViewBag.MakeFilter">
                                <i class="bi bi-arrow-down"></i>
                            </a>
                        </span>
                    </span>
                </th>
                <th>
                    <div class="d-flex align-items-center">
                        <span class="me-2">Make</span>
                        <form method="get" asp-action="Index">
                            <div class="input-group input-group-sm">
                                <input type="hidden" name="searchTerm" value="@ViewBag.SearchTerm" />
                                <input type="hidden" name="sortColumn" value="@ViewBag.SortColumn" />
                                <input type="hidden" name="sortDirection" value="@ViewBag.SortDirection" />
                                <input type="hidden" name="page" value="@ViewBag.Page" />
                                <input type="text" name="makeFilter" value="@ViewBag.MakeFilter" class="form-control shadow-none rounded" placeholder="Filter by Make Name"  />
                                <button type="submit" class="btn btn-dark">Filter</button>
                            </div>
                        </form>
                    </div>
                </th>


                <th>Make ID</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var vehicleModel in Model)
            {
                <tr>
                    <td>@vehicleModel.Id</td>
                    <td>@vehicleModel.Name</td>
                    <td>@vehicleModel.Abrv</td>
                    <td>@vehicleModel.MakeName</td>
                    <td>@vehicleModel.MakeId</td>
                    <td>
                        <a class="btn btn-warning" asp-action="Edit" asp-route-id="@vehicleModel.Id">Edit</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <nav aria-label="Page navigation">
        <ul class="pagination justify-content-end">
            @if (ViewBag.HasPreviousPage)
            {
                <li class="page-item"><a class="page-link" asp-action="Index" asp-route-pageNumber=@previousPage asp-route-pageSize=@ViewBag.PageSize asp-route-sortBy="@ViewBag.SortBy" asp-route-sortDirection="@ViewBag.SortDirection">Previous</a></li>
            }
            else
            {
                <li class="page-item disabled">
                    <span class="page-link">Previous</span>
                </li>
            }
            @for (int i = 1; i <= ViewBag.TotalPages; i++)
        {
            <li class="page-item"><a class="page-link" asp-action="Index" asp-route-pageNumber="@i" asp-route-pageSize=@ViewBag.PageSize asp-route-sortBy="@ViewBag.SortBy" asp-route-sortDirection="@ViewBag.SortDirection">@i</a></li>
        }
            @if (ViewBag.HasNextPage) {
            <li class="page-item"><a class="page-link" asp-action="Index" asp-route-pageNumber=@nextPage asp-route-pageSize=@ViewBag.PageSize asp-route-sortBy="@ViewBag.SortBy" asp-route-sortDirection="@ViewBag.SortDirection">Next</a></li>
            }
            else
            {
                <li class="page-item disabled">
                    <span class="page-link">Next</span>
                </li>
            }
        </ul>
</nav>
</div>
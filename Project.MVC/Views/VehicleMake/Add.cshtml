@model Project.MVC.Models.ViewModels.VehicleMakeViewModel
@{
    ViewData["Title"] = "Add Vehicle Make";
}
<div class="container">
<h1 class="mt-5">Add Vehicle Make</h1>

<div class="mt-5">
<form asp-action="Add" method="post">
    <div class="form-group mb-4">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group mb-4">
        <label asp-for="Abrv" class="control-label"></label>
        <input asp-for="Abrv" class="form-control" />
        <span asp-validation-for="Abrv" class="text-danger"></span>
    </div>
            <div class="d-flex justify-content-between">
    <button type="submit" class="btn btn-success">Create</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </div>
</form>
</div>

</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}